%h1 Listing entries
%table.table.table-bordered.table-striped.table-hover
  %thead
    %tr
      %th Date
      %th Weightlifting
      %th Table tennis hours
      %th Protein intake
      %th Ate junk
      %th Ate too much
      %th Weight
      %th Remarks
      %th
      %th
      %th
  %tbody
    - @entries.each do |entry|
      %tr
        %td.text-center
          = entry.created_at.strftime('%d %b')
        %td.text-center
          - if entry.weightlifting
            %span.glyphicon.glyphicon-ok
          - else
            %span.glyphicon.glyphicon-remove
        %td.text-center
          = entry.table_tennis_hours
        %td.text-center
          = entry.protein_intake
          g
        %td.text-center
          - if entry.ate_junk
            %span.glyphicon.glyphicon-ok
          - else
            %span.glyphicon.glyphicon-remove
        %td.text-center
          - if entry.ate_too_much
            %span.glyphicon.glyphicon-ok
          - else
            %span.glyphicon.glyphicon-remove
        %td.text-center
          = entry.weight
          kg
        %td
          = entry.remarks
        %td= link_to 'Show', entry
        %td= link_to 'Edit', edit_entry_path(entry)
        %td= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Entry', new_entry_path
